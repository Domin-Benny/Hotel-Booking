{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "jsx": "react", // This is important for React JSX syntax
      "outDir": "./dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": ["hotel/app/**/*"]
  }
  