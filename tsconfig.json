{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "strict": true,
      "jsx": "react-jsx",  // For React 17+ JSX transformation
      "outDir": "./dist",
      "rootDir": "./",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false,
      "typeRoots": ["node_modules/@types", "node_modules"],
      "types": ["node", "react"]
    },
    "include": ["hotel/app/**/*"],
    "exclude": ["node_modules"]
  }
  